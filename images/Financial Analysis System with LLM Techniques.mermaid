# Copy and paste the below code into https://mermaid.live/ to generate the image

graph TB
    User(("User Input")) --> InputValidation["Input Validation"]
    
    subgraph Input_Processing["1. Input Processing"]
        direction TB
        InputValidation --> Revenue["Revenue Parameters"]
        InputValidation --> Costs["Cost Parameters"]
        InputValidation --> Operating["Operating Parameters"]
        
        style InputValidation fill:#e6ffe6,stroke:#333
        style Revenue fill:#e6ffe6,stroke:#333
        style Costs fill:#e6ffe6,stroke:#333
        style Operating fill:#e6ffe6,stroke:#333
    end

    subgraph Calculation_Engine["2. Calculation Engine"]
        direction TB
        Revenue & Costs & Operating --> Calculate["Financial Calculations"]
        Calculate --> Breakeven["Break-even Analysis"]
        Breakeven --> BidRange["Bid Range Determination"]
        
        style Calculate fill:#f0fff0,stroke:#333
        style Breakeven fill:#f0fff0,stroke:#333
        style BidRange fill:#f0fff0,stroke:#333
    end

    subgraph LLM_Analysis["3. LLM Analysis"]
        direction TB
        BidRange --> Step1["Step-by-Step Review"]
        Step1 --> MonologueStep["Inner Monologue Analysis"]
        MonologueStep --> Recommend["Recommendation Generation"]
        
        style Step1 fill:#fff0f0,stroke:#333
        style MonologueStep fill:#fff0f0,stroke:#333
        style Recommend fill:#fff0f0,stroke:#333
    end

    Recommend --> Final["Final Recommendations"]
    Final --> User

    classDef user fill:#ff9999,stroke:#333
    classDef process fill:#99ccff,stroke:#333
    classDef output fill:#99ff99,stroke:#333

    class User user
    class Final output
    class InputValidation process

    %% Add annotations
    note1["Uses Linear Chain for\nInput Processing"]
    note2["Implements Decision Chain for\nBid Range Analysis"]
    note3["Applies Step-by-Step and\nInner Monologue for Review"]

    Input_Processing -.- note1
    Calculation_Engine -.- note2
    LLM_Analysis -.- note3

    style note1 fill:#ffffcc,stroke:#333
    style note2 fill:#ffffcc,stroke:#333
    style note3 fill:#ffffcc,stroke:#333
